extends ../layout-inapp

block content
	#api-container
		.form.api-form
			.api-header
				input.form-control.form-control-before-edit(type="text", value="Projects Endpoint")

			.api-body
				.form-group
					.input-group
						.input-group-btn
							select.btn.btn-default(type="button")
								option GET
								option POST
								option PUT
								option DELETE
						//span.input-group-addon-slash
						input.form-control(type="text", placeholder="Enter resource endpoint", value="/projects")
						.input-group-btn
							button.btn.btn-default(type="button") Save

				.response-view
					ul.nav.nav-tabs
						li.active: a(href="#response", data-toggle="tab", aria-expanded="true") Response
						li: a(href="#headers", data-toggle="tab", aria-expanded="false") Headers

					#myTabContent.tab-content
						.tab-pane.fade.active.in#response
							label.radio-inline
								input(type="radio", name="inlineRadioOptions", value="json", checked="true")
								| JSON 
								small.text-muted (application/json)
							label.radio-inline
								input(type="radio", name="inlineRadioOptions", value="html")
								| HTML 
								small.text-muted (text/html)
							label.radio-inline
								input(type="radio", name="inlineRadioOptions", value="xml")
								| XML 
								small.text-muted (text/xml)
							label.radio-inline
								input(type="radio", name="inlineRadioOptions", value="text")
								| Text 
								small.text-muted (text/plain)
							
							textarea#code.form-control
						
						.tab-pane.fade#headers
							ul.list-unstyled
								li.form-group
									.row
										.col-md-4
											input.form-control.input-sm(type="text", placeholder="Key")
										.col-md-4
											input.form-control.input-sm(type="text", placeholder="Value")
										a.text-muted(href="#")
											i.material-icons(style="margin-top: 5px;") remove_circle
								li.form-group
									.row
										.col-md-4
											input.form-control.input-sm(type="text", placeholder="Key")
										.col-md-4
											input.form-control.input-sm(type="text", placeholder="Value")
										a.text-muted(href="#")
											i.material-icons(style="margin-top: 5px;") remove_circle
				.request-view
					.well(style="margin: 25px 0 10px 0;")
						h4(style="margin: 0") Requests view
							span.badge.pull-right Last call 10ms ago
					ul.nav.nav-tabs
						li.active: a(href="#request-body", data-toggle="tab", aria-expanded="true") Request
						li: a(href="#request-headers", data-toggle="tab", aria-expanded="false") Headers
					#request-tabs.tab-content
						.tab-pane.fade.active.in#request-body
							textarea#code-request.form-control
						
						.tab-pane.fade#request-headers

	.spinner.animated.slideInDown
		.bounce1
		.bounce2
		.bounce3