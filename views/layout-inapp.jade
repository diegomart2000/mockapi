doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')

		title mockapi

		link(rel='shortcut icon', href='/img/favicon.ico')
		link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Ewert', type='text/css')
		link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons', type='text/css')
		link(rel='stylesheet', href='/css/vendor-bundle.css', type='text/css')
		link(rel='stylesheet', href='/css/mockapi.css', type='text/css')
	body
		//Header
		include ./layout/header
		.container-fluid
			.row
				//Navigation
				.col-sm-4.col-md-3.sidebar
					include ./layout/nav

				//Application main container
				.col-sm-8.col-sm-offset-4.col-md-9.col-md-offset-3.main
					block content

		//Base scripts
		script(src='/js/vendor-bundle-min.js', type='text/javascript')
		script(src='/js/require.js', type='text/javascript', data-main='/js/app/mockapi-main')

		block scripts