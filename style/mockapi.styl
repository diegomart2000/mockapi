//Mockapi Styles
@import url("https://fonts.googleapis.com/css?family=Roboto:300,400,500,700");

//Header
header
	height: 60px
	width: 100%
	position: fixed
	top: 0
	z-index: 9

	.navbar
		border-radius: 0
		margin-bottom: 0

body > .container-fluid
	margin-top: 60px

//Navigation Side Bar
.sidebar
	position: fixed
	height: 100%
	overflow-y: scroll
	border-right: 2px solid #dce4ec

	&-header
		height: 60px
		margin: 0 -15px
		padding: 0 15px
		background-color: #ecf0f1
		h3
		h4
		h5
			margin: 0
			line-height: 60px

	li
		a
			padding: 0 15px
			margin: 0 -15px
			height: 60px

			h3
			h4
			h5
				padding: 0 5px 0 15px
				margin: 0
				line-height: 60px
				text-overflow: ellipsis
				white-space: nowrap
				overflow: hidden
				width: calc(100% - 24px)

			i
				margin-top: 17px
				animation-duration: 0.2s
				-webkit-animation-duration: 0.2s
				-moz-animation-duration: 0.2s

			i[data-action]
				display: none
				cursor: pointer

			&:hover
				& > h5
					width: calc(100% - 24px * 2)
				& > i[data-action]
					display: inline-block
					&:hover
						color: #18bc9c
	
//API container
#api-container
	padding 0 10px

.api-form
	position: relative
	padding-bottom: 50px;

	.api-header
		position: fixed
		width: 100%
		height: 60px
		margin: 0 -25px 25px -25px
		padding: 7px 25px
		background-color: #ecf0f1
		top: 60px
		z-index: 9

		input
			font-size: 19px

			&.form-control-before-edit
				padding-left: 0
				padding-right: 0
				text-transform: uppercase

	.api-body
		margin-top: calc(60px + 25px)

	.input-group
		position: relative

		.input-group-addon-slash:before
			z-index: 99
			content: "/"
			position: absolute
			line-height: 45px
			padding: 0px 12px
			font-weight: bold

		select
		button
			min-width: 120px
			text-transform: uppercase

		select
			-webkit-appearance: none
			-moz-appearance: none
			background-position: right 50%
			background-repeat: no-repeat
			background-image: url("data:image/png;base64,")

	.form-control-before-edit
		background-color: #ecf0f1
		border: none

	.CodeMirror
		border: 2px solid #ecf0f1
		border-radius: 4px
		margin-top: 15px
		height: 240px

		.CodeMirror-gutters
			border-width: 2px
			border-color: #dce4ec
			background-color: #f3f6f6

	.nav.nav-tabs
		margin: 0 -25px 15px -25px
		padding: 0 25px

		& > li > a
			padding: 5px 15px

		li.active
			a
				border-bottom: 3px solid #2c3e50
				border-left: none
				border-right: none
				border-top: none
				backgroud-color: transparent